<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aplicacion.puzlive"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.aplicacion.proyecto.PuzLive"
            android:label="@string/title_activity_puz_live" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aplicacion.proyecto.Niveles"
            android:label="@string/title_niveles" >
        </activity>
        <activity
            android:name="com.aplicacion.proyecto.Acerca_de"
            android:label="@string/title_acerca" >
        </activity>
        <activity
            android:name="com.aplicacion.proyecto.CameraPreview"
            android:label="@string/title_preview"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.aplicacion.proyecto.Facil"
            android:label="@string/title_facil"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.aplicacion.proyecto.Medio"
            android:label="@string/title_medio"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.aplicacion.proyecto.Dificil"
            android:label="@string/title_dificil"
            android:screenOrientation="landscape" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

</manifest>